<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_lyt_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.HomeActivity">

    <LinearLayout
        android:id="@+id/home_lyt_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/home_lbl_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_lbl_names"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_txt_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/home_lbl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_lbl_email"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/home_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logout"
            android:text="@string/home_btn_logout" />
    </LinearLayout>
</ScrollView>